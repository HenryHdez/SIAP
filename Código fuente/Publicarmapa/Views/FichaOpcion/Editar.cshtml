@model SistemaExperto.Models.FichaOpcion

@{
    ViewBag.Title = "Editar";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<link href="http://premiumsoftware.net/content/cleditor/jquery.cleditor.min.css" rel="stylesheet" />
<script src="http://premiumsoftware.net/content/cleditor/jquery.cleditor.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Informacion").cleditor();
     
    });
</script>

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/FichaOpcion">Ficha OT</a></li>
    <li class="active">Editar</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Editar entrada a ficha OT @Model.ListaOpciones.OpcionTecnologica.Nombre para cultivo @Model.ListaOpciones.Cultivo.Nombre en municipio de @Model.ListaOpciones.Municipio.Nombre</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.FichaOpcionId)
        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Titulo, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Titulo)

                        @Html.ValidationMessageFor(model => model.Titulo)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Informacion, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        @Html.TextAreaFor(model => model.Informacion, new { @id = "Informacion", Rows = 2 })
                        @Html.ValidationMessageFor(model => model.Informacion)
                    </div>
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ListaOpcionesId, "Regla OT (relacion OT)", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ListaOpcionesId")
                    @*@Html.DropDownList("ListaOpcionesId", String.Empty)*@
                    @Html.ValidationMessageFor(model => model.ListaOpcionesId)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Orden, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Orden)
                    @Html.ValidationMessageFor(model => model.Orden)
                </div>
            </div>
            <!-- Botón editar -->
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <br />
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
    }
</div>