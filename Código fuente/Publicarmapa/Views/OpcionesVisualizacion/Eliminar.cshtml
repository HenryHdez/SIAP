@model SistemaExperto.Models.OpcionesVisualizacion

@{
    ViewBag.Title = "Eliminar opción";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/OpcionesVisualizacion">Opciones visualización</a></li>
    <li class="active">Eliminar Opción </li>
</ol>
<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Eliminar opción de visualización para capa</h2>
    <hr />

    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Capa.NombreCaracterizacion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Capa.NombreCaracterizacion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NombreTipoOpcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreTipoOpcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NombreOpcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreOpcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NombreOpcionJScript)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreOpcionJScript)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Botón eliminar -->
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <br />
                    <input type="submit" value="Eliminar" class="btn btn-primary" />

                </div>
            </div>
        }
    </div>
</div>