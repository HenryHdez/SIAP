@model SistemaExperto.Models.CultivoTipoEtapa

@{
    ViewBag.Title = "Editar";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/CultivoTipoEtapa">Tipo Etapa Cultivo</a></li>
    <li class="active">Editar</li>
</ol>
<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">
    <!--Título-->
    <h2>Editar ciclo cultivo</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.CultivoTipoEtapaId)
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Duracion, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Duracion)
                        @Html.ValidationMessageFor(model => model.Duracion)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MesInicio, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MesInicio)
                        @Html.ValidationMessageFor(model => model.MesInicio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CultivoCicloId, "CultivoCicloId", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.DropDownList("CultivoCicloId", String.Empty)*@
                        @Html.DropDownList("CultivoCicloId")
                        @Html.ValidationMessageFor(model => model.CultivoCicloId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CultivoEtapaId, "CultivoEtapaId", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CultivoEtapaId", String.Empty)
                        @Html.ValidationMessageFor(model => model.CultivoEtapaId)
                    </div>
                </div>

                <!-- Botón editar -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<script>
    $("select").addClass("form-control")
</script>
