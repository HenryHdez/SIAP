@model SistemaExperto.Models.EstacionTipo

@{
    ViewBag.Title = "Editar";
}

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/EstacionTipo">Tipos estación</a></li>
    <li class="active">Editar tipo</li>
</ol>

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Scripts -->
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/saat.js"></script>
<script src="~/Scripts/jasny-bootstrap.js"></script>
<script>
    $("select").addClass("form-control")
</script>

!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--título-->

    <h2>Editar tipo estación</h2>

    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
           
            @Html.ValidationSummary(true)
            <div class="row">
                @Html.HiddenFor(model => model.EstacionTipoId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Tipo, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Tipo)
                        @Html.ValidationMessageFor(model => model.Tipo)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Radio, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Radio)
                        @Html.ValidationMessageFor(model => model.Radio)
                    </div>
                </div>

                <!-- Botón editar -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
    </div>
    }

    </div>
<script>
    $("select").addClass("form-control")
</script>