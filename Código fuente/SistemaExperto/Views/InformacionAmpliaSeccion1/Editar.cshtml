@model SistemaExperto.Models.InformacionAmpliaSeccion1

@{
    ViewBag.Title = "Editar";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<link href="~/Content/css/jquery.cleditor.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.cleditor.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#InformacionMapa").cleditor();
        $("#NombreMapa").cleditor();
    });
</script>

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/InformacionAmpliaSeccion1">Informacion amplia seccion 1</a></li>
    <li class="active">Editar</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!-- mensaje de error -->
    <div class="bg-danger">@ViewBag.MensajeError</div>

    <!--Título-->
    <h2>Editar Informacion amplia departamento</h2>
    <hr class="separador-30"/>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.InformacionAmpliaSeccion1Id)
            <div class="row">

                <div class="form-group">
                    @Html.LabelFor(model => model.CapaDepartamentoId, "Capa - Departamento", new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.DropDownList("CapaDepartamentoId")
                        @Html.ValidationMessageFor(model => model.CapaDepartamentoId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TituloSeccion1, new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TituloSeccion1)
                        @Html.ValidationMessageFor(model => model.TituloSeccion1)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.InformacionMapa, new { @class = "col-md-12" })
                    <div class="col-md-12">
                        <textarea id="InformacionMapa" name="InformacionMapa">@Model.InformacionMapa</textarea>
                    </div>
                </div>

                <hr class="separador-30"/>

                <!-- Botones volver y guardar -->
                <div class="form-group">
                    <div class="col-md-6 text-center">
                        <a role="button" class="btn bg-danger btn-default" href="~/InformacionAmpliaSeccion1">Volver</a>
                    </div>
                    <div class="col-md-6 text-center">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        </div>
    }
</div>
<script>
    $("select").addClass("form-control");
    $("input").addClass("form-control");
</script>