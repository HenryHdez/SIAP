@model IEnumerable<SistemaExperto.Models.TipoPrediccion>

@{
    ViewBag.Title = "Index";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />


<!-- Scripts -->
<script src="~/Scripts/jquery-2.1.1.js"></script>
<script src="~/Scripts/bootstrap-3.2.js"></script>

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Parametros">General</a></li>
    <li class="active">Tipo predicciones</li>
</ol>

<!-- Contenido -->

<div class="row col-md-10 col-md-offset-1 contenido">
    <!-- Información -->
    <div class="col-md-4 well">

        <!-- Botón crear -->
        <div class="text-center">
            <a class="btn btn-default" href="~/TipoPredicciones/Crear" role="button"><span class="glyphicon glyphicon-plus-sign"></span> Crear nuevo</a>
        </div>

        <p></p>

        <img class="img-responsive thumbnail" src="~/Content/Imagenes/clima_inicio.png" />

    </div>

    <!-- Tabla -->
    <div class="col-md-8">
        <table class="table">
            <!-- Encabezado -->
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Maximo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Minimo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <!-- Contenido -->
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Maximo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Minimo)
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.TipoPrediccionId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.TipoPrediccionId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.TipoPrediccionId })*@
                            <a class="btn btn-default" href="~/TipoPredicciones/Detalles/@item.TipoPrediccionId" role="button" data-toggle="tooltip" title="Detalles"><span class="glyphicon glyphicon-file"></span></a>
                            <a class="btn btn-default" href="~/TipoPredicciones/Editar/@item.TipoPrediccionId" role="button" data-toggle="tooltip" title="Editar"><span class="glyphicon glyphicon-edit"></span></a>
                            <a class="btn btn-default" href="~/TipoPredicciones/Eliminar/@item.TipoPrediccionId" role="button" data-toggle="tooltip" title="Eliminar"><span class="glyphicon glyphicon-remove-circle"></span></a>

                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>