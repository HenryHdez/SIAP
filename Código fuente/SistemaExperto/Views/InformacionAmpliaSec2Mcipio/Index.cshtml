@model IEnumerable<SistemaExperto.Models.InformacionAmpliaSec2Mcipio>

@{
    ViewBag.Title = "Index";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Scripts -->
<script src="~/Scripts/jquery-2.1.1.js"></script>
<script src="~/Scripts/bootstrap-3.2.js"></script>

<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>
<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Parametros">Parámetros</a></li>
    <li class="active">Informacion amplia seccion2 Municipio</li>
</ol>
<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">
    @* Validar si es usuario administrador muestra el contenido de la pagina *@
    @if ((User.Identity.Name.Split('|')[1]) == "True" || true)
    {
     <!-- Información -->
        <div class="col-md-4 well">

            <!-- Botón crear -->
            <div class="text-center">
                <a class="btn btn-default" href="~/InformacionAmpliaSec2Mcipio/Crear" role="button"><span class="glyphicon glyphicon-plus-sign"></span> Crear nuevo valor</a>
            </div>

            <p></p>

            <img class="img-responsive thumbnail" src="~/Content/Imagenes/convencion_pais.png" />
            <p>Para observar los detalles haga clic sobre el botón <strong>Detalles </strong></p>
        </div>

    <!-- Tabla -->
        <div class="col-md-8">
            <table class="table" id="tabla_index">
                <!-- Encabezado -->
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CapasMunicipios.Capa.NombreCaracterizacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CapasMunicipios.Municipio.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TituloSeccion2Mcipio)
                        </th>
                        
                        <th></th>
                    </tr>
                </thead>
                <!-- Contenido -->
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CapasMunicipios.Capa.NombreCaracterizacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CapasMunicipios.Municipio.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TituloSeccion2Mcipio)
                            </td>
                          
                            <td>
                                <a class="btn btn-default" href="~/InformacionAmpliaSec2Mcipio/Detalles/@item.InformacionAmpliaSec2McipioId" role="button" data-toggle="tooltip" title="Detalles"><span class="glyphicon glyphicon-file"></span></a>
                                <a class="btn btn-default" href="~/InformacionAmpliaSec2Mcipio/Editar/@item.InformacionAmpliaSec2McipioId" role="button" data-toggle="tooltip" title="Editar"><span class="glyphicon glyphicon-edit"></span></a>
                                <a class="btn btn-default" href="~/InformacionAmpliaSec2Mcipio/Eliminar/@item.InformacionAmpliaSec2McipioId" role="button" data-toggle="tooltip" title="Eliminar"><span class="glyphicon glyphicon-remove-circle"></span></a>

                                @*@Html.ActionLink("Edit", "Edit", new { id=item.InformacionAmpliaSec2McipioId }) |
                                    @Html.ActionLink("Details", "Details", new { id=item.InformacionAmpliaSec2McipioId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id=item.InformacionAmpliaSec2McipioId })*@
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center" style="color: red">
            No tiene permisos para ingresar a esta página.
        </div>
    }
</div>
