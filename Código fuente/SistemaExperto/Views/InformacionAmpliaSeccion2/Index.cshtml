@model IEnumerable<SistemaExperto.Models.InformacionAmpliaSeccion2>

@{
    ViewBag.Title = "Index";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Scripts -->
<script src="~/Scripts/jquery-2.1.1.js"></script>
<script src="~/Scripts/bootstrap-3.2.js"></script>

<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>
<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Parametros">Parámetros</a></li>
    <li class="active">Informacion amplia seccion2</li>
</ol>
<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">
   @* Validar si es usuario administrador muestra el contenido de la pagina *@
@if ((User.Identity.Name.Split('|')[1]) == "True" || true)
{
     <!-- Información -->
    <div class="col-md-4 well">

        <!-- Botón crear -->
        <div class="text-center">
            <a class="btn btn-default" href="~/InformacionAmpliaSeccion2/Crear" role="button"><span class="glyphicon glyphicon-plus-sign"></span> Crear nuevo valor</a>
        </div>

        <p></p>

        <img class="img-responsive thumbnail" src="~/Content/Imagenes/convencion_pais.png" />
        <p>Para observar los detalles haga clic sobre el botón <strong>Detalles </strong></p>
    </div>

    <!-- Tabla -->
    <div class="col-md-8">
        <table class="table" id="tabla_index">
            <!-- Encabezado -->
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CapasDepartamentos.Capa.NombreCaracterizacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CapasDepartamentos.Departamento.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TituloSeccion2)
                    </th>
                   
                  
                    <th></th>
                </tr>
            </thead>
            <!-- Contenido -->
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CapasDepartamentos.Capa.NombreCaracterizacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CapasDepartamentos.Departamento.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TituloSeccion2)
                        </td>
                           
                        <td>
                            <a class="btn btn-default" href="~/InformacionAmpliaSeccion2/Detalles/@item.InformacionAmpliaSeccion2Id" role="button" data-toggle="tooltip" title="Detalles"><span class="glyphicon glyphicon-file"></span></a>
                            <a class="btn btn-default" href="~/InformacionAmpliaSeccion2/Editar/@item.InformacionAmpliaSeccion2Id" role="button" data-toggle="tooltip" title="Editar"><span class="glyphicon glyphicon-edit"></span></a>
                            <a class="btn btn-default" href="~/InformacionAmpliaSeccion2/Eliminar/@item.InformacionAmpliaSeccion2Id" role="button" data-toggle="tooltip" title="Eliminar"><span class="glyphicon glyphicon-remove-circle"></span></a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
       }
    else {
    <div class="text-center" style="color: red">
        No tiene permisos para ingresar a esta página.
    </div>
    }
</div>
