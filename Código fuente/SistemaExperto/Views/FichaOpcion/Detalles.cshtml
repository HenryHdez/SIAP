@model SistemaExperto.Models.FichaOpcion

@{
    ViewBag.Title = "Detalles";
}

<!-- Scripts -->
@*<script src="~/Scripts/jquery-1.10.2.js"></script>*@

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/FichaOpcion">Ficha OT</a></li>
    <li class="active">Detalles</li>
</ol>
<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!-- título -->
    <h2>Entrada a Ficha OT @Model.ListaOpciones.OpcionTecnologica.Nombre para cultivo @Model.ListaOpciones.Cultivo.Nombre  </h2>


    <div class="row">
        <div class="col-xs-12 col-md-12">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ListaOpciones.Municipio.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ListaOpciones.Municipio.Nombre)
                </dd>
                <dt>
                    Condición
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ListaOpciones.TipoPrediccion.Nombre)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ListaOpciones.EstadoDesarrolloCultivo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ListaOpciones.EstadoDesarrolloCultivo)
                </dd>
              
                <dt>
                    @Html.DisplayNameFor(model => model.ListaOpciones.IndicadorLocal)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ListaOpciones.IndicadorLocal)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Titulo)
                </dd>

                <dt>
                    
                    @Html.DisplayNameFor(model => model.Informacion)
                </dt>

                <dd>
                    @Html.Raw(Model.Informacion)
                    @*@Html.DisplayFor(model => model.Informacion)*@
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Orden)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Orden)
                </dd>
                

            </dl>
        </div>
    </div>
</div>
