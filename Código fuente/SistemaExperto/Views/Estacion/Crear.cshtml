@model SistemaExperto.Models.Estacion

@{
    ViewBag.Title = "Crear estación";
}

<!-- Scripts -->
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/se.js"></script>
<script src="~/Scripts/jasny-bootstrap.js"></script>

<script>
    $("select").addClass("form-control")
</script>


<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />


<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Parametros">General</a></li>
    <li><a href="~/Estacion">Estaciones</a></li>
    <li class="active">Crear estación</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Crear estación</h2>
    <hr />

    @using (Html.BeginForm("Crear", "Estacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="row">

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CodigoIdeam, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.CodigoIdeam, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CodigoIdeam)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Latitud, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Latitud, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.Latitud)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Longitud, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Longitud, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.Longitud)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Altitud, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Altitud, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.Altitud)
                    </div>
                </div>

               
                <div class="form-group">
                    @Html.LabelFor(model => model.RutaImagen, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="fileinput fileinput-new form-group" data-provides="fileinput" style="margin-left:0px">
                            <div class="fileinput-preview thumbnail" data-trigger="fileinput" style=" max-width:350px"></div>
                            <span class="btn btn-default btn-file">
                                <input type="file" name="imagenAdjunta">
                            </span>
                            <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Quitar</a>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EstacionTipoId, "Tipo", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">

                        @Html.DropDownList("EstacionTipoId", String.Empty)
                        @Html.ValidationMessageFor(model => model.EstacionTipoId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        </div>
    }
</div>
    <script>
        $("select").addClass("form-control")
    </script>
