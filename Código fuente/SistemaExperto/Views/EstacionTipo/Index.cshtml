@model IEnumerable<SistemaExperto.Models.EstacionTipo>

@{
    ViewBag.Title = "Tipo estación";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />


<!-- Scripts -->
<script src="~/Scripts/jquery-2.1.1.js"></script>
<script src="~/Scripts/bootstrap-3.2.js"></script>
<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li class="active">Tipos estación</li>
</ol>

<!-- Contenido -->

<div class="row col-md-10 col-md-offset-1 contenido">
@* Validar si es usuario administrador muestra el contenido de la pagina *@
@if ((User.Identity.Name.Split('|')[1]) == "True")
{ 
    <!-- Información -->
    <div class="col-md-4 well">

        <!-- Botón crear -->
        <div class="text-center">
            <a class="btn btn-default" href="~/EstacionTipo/Crear" role="button"><span class="glyphicon glyphicon-plus-sign"></span> Crear nuevo tipo</a>
        </div>

        <p></p>

        <img class="img-responsive thumbnail" src="~/Content/Imagenes/clima_estaciones.png" />

    </div>

    <!-- Tabla -->
    <div class="col-md-8">
        <table class="table" id="tabla_index">
            <!-- Encabezado -->
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Radio)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <!-- Contenido -->
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Radio)
                        </td>
                        <td>

                            <a class="btn btn-default" href="~/EstacionTipo/Detalles/@item.EstacionTipoId" role="button" data-toggle="tooltip" title="Detalles"><span class="glyphicon glyphicon-file"></span></a>
                            <a class="btn btn-default" href="~/EstacionTipo/Editar/@item.EstacionTipoId" role="button" data-toggle="tooltip" title="Editar"><span class="glyphicon glyphicon-edit"></span></a>
                            <a class="btn btn-default" href="~/EstacionTipo/Eliminar/@item.EstacionTipoId" role="button" data-toggle="tooltip" title="Eliminar"><span class="glyphicon glyphicon-remove-circle"></span></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    }
    else {
    <div class="text-center" style="color: red">
        No tiene permisos para ingresar a esta página.
    </div>
    }
</div>
    