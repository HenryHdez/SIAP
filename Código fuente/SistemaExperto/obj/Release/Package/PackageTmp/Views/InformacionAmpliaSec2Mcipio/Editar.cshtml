@model SistemaExperto.Models.InformacionAmpliaSec2Mcipio

@{
    ViewBag.Title = "Editar";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<link href="http://premiumsoftware.net/content/cleditor/jquery.cleditor.min.css" rel="stylesheet" />
<script src="http://premiumsoftware.net/content/cleditor/jquery.cleditor.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Descripcion").cleditor();
    
    });
</script>
<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Parametros">Parámetros</a></li>
    <li><a href="~/InformacionAmpliaSec2Mcipio">Informacion amplia seccion 2 Municipio</a></li>
    <li class="active">Editar</li>
</ol>
<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Editar Informacion amplia seccion 2 para Municipio</h2>
    <hr />



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="row">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.InformacionAmpliaSec2McipioId)

                <div class="form-group">
                    @Html.LabelFor(model => model.CapaMunicipioId, "CapaMunicipioId", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CapaMunicipioId")
                        @*@Html.DropDownList("CapaMunicipioId", String.Empty)*@
                        @Html.ValidationMessageFor(model => model.CapaMunicipioId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreCortoSeccion2, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NombreCortoSeccion2)
                        @Html.ValidationMessageFor(model => model.NombreCortoSeccion2)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TituloSeccion2Mcipio, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TituloSeccion2Mcipio)
                        @Html.ValidationMessageFor(model => model.TituloSeccion2Mcipio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Descripcion, new { @id = "Descripcion", rows = 5 })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>

                <!-- Botón editar -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<script>
    $("select").addClass("form-control")
</script>