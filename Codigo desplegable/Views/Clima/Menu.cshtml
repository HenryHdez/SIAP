@{
    ViewBag.Title = "Clima";
}

<!-- Scripts -->
<script src="~/Scripts/jquery-2.1.1.js"></script>
<script src="~/Scripts/jquery-ui-1.11.1.js"></script>
<script src="~/Scripts/jquery.ui.datepicker-es.js"></script>
<script src="~/Scripts/bootstrap-3.2.js"></script>
<script src="~/Scripts/bootstrap-select.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker({
            maxDate: 0,
            altField: '#FechaSiembra',
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy",
            numberOfMonths: 2,
            defaultDate: '15/06/2009',
            maxDate: '14/06/2009'
        });
    });
</script>

<!-- Estilos -->
<link href="~/Content/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/css/jquery-ui.css" rel="stylesheet" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
<link href="~/Content/css/Site.css" rel="stylesheet" />
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="/Content/css/OpcTecnologicas.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        //Script de globo de ayuda
        $('[data-toggle="tooltip"]').tooltip({
            'placement': 'top'
        });
    });
</script>

<style>
    .tooltip.top .tooltip-inner {
        background-color: black;
    }

    .tooltip.top .tooltip-arrow {
        border-top-color: black;
    }

    .jumbotron-clima {
        background-color: gray;
    }

    .contenedor-clima {
        top: 120px;
    }

    .breadcrumb {
        top: 30px;
    }
</style>

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Clima">Administración funcional</a></li>
    <li class="active">Clima</li>
</ol>

<div class="container" style="background-color:white">
    @* Validar si es usuario administrador muestra el contenido de la pagina *@
@if ((User.Identity.Name.Split('|')[1]) == "True")
    {
    <div class="col-md-10 col-md-offset-1 contenedor-clima text-center">

        <div class="jumbotron jumbotron-clima">
            <br />
            <h2>Clima</h2>
            <br />
        </div>

        <div class="col-md-12 espacio20"></div>

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3">
                <a class="thumbnail" href="~/Cultivo" data-toggle="tooltip" title="Módulo de cultivos, permite definir un nuevo cultivo o modificar uno existente">
                    <img src="~/Content/Imagenes/clima_cultivos.png" />
                </a>
                <div class="caption" style="text-align:center">
                    <h3>Cultivos</h3>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
                <a class="thumbnail" href="~/Zona" data-toggle="tooltip" title="Módulo de zonas, para administración de las zonas del sistema">
                    <img src="~/Content/Imagenes/clima_zonas.png" />
                </a>
                <div class="caption" style="text-align:center">
                    <h3>Zonas productivas</h3>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
                <a class="thumbnail" href="~/Estacion" data-toggle="tooltip" title="Módulo de estaciones, para administración de las estaciones del sistema y registro de datos mensuales (temperatura, viento y precipitación)">
                    <img src="~/Content/Imagenes/clima_estaciones.png" />
                </a>
                <div class="caption" style="text-align:center">
                    <h3>Estaciones meteorológicas</h3>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
                <a class="thumbnail" href="~/Prediccion" data-toggle="tooltip" title="Módulo de predicción, para calcular la ETo mensual y el índice de Palmer">
                    <img src="~/Content/Imagenes/clima_predicciones.png" />
                </a>
                <div class="caption" style="text-align:center">
                    <h3>Condición probable de humedad</h3>
                </div>
            </div>
        </div>
    </div>
     }
        else {
        <div class="text-center" style="color: red">
            No tiene permisos para ingresar a esta página.
        </div>
        }
</div>