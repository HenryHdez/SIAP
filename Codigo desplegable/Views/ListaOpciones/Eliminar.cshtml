@model SistemaExperto.Models.ListaOpciones

@{
    ViewBag.Title = "Eliminar";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/listaOpciones">Lista opciones</a></li>
    <li class="active">Eliminar</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Eliminar relación de OT con cultivo, condicion y municipio</h2>
    <hr />

    <!-- Datos -->
    <div>
   
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Cultivo.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cultivo.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Municipio.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Municipio.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OpcionTecnologica.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OpcionTecnologica.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TipoOferta.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TipoOferta.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TipoPrediccion.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TipoPrediccion.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EstadoDesarrolloCultivo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EstadoDesarrolloCultivo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IndicadorLocal)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IndicadorLocal)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

           <!-- Botón eliminar -->
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <br />
                    <input type="submit" value="Eliminar" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>