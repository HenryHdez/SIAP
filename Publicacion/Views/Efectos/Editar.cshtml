@model SistemaExperto.Models.Efectos

@{
    ViewBag.Title = "Editar datos de efectos";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<link href="http://premiumsoftware.net/content/cleditor/jquery.cleditor.min.css" rel="stylesheet" />

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/Efectos/Index">Efectos</a></li>
    <li class="active">Editar</li>
</ol>

<!-- Scripts -->
<script src="http://premiumsoftware.net/content/cleditor/jquery.cleditor.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Nombre").cleditor();
    });
</script>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!-- mensaje de error -->
    <div class="bg-danger">@ViewBag.MensajeError</div>

    <!--título-->
    <h2>Editar datos del efecto</h2>
    <hr class="separador-30" />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.EfectoId)
            <div class="row">

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea id="Nombre" name="Nombre">@Model.Nombre</textarea>
                    </div>
                </div>

                <hr class="separador-30"/>

                <!-- Botones volver y guardar -->
                <div class="form-group">
                    <div class="col-md-6 text-center">
                        <a role="button" class="btn bg-danger btn-default" href="~/Efectos">Volver</a>
                    </div>
                    <div class="col-md-6 text-center">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        </div>
    }

</div>