@model SistemaExperto.Models.CultivoDepartamento

@{
    ViewBag.Title = "Delete";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Productividad">Productividad</a></li>
    <li><a href="~/CultivoDepartamento">Cultivos</a></li>
    <li class="active">Eliminar</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <h3>¿Eliminar este cultivo del departamento?</h3>
    <div>
        <div class="col-xs-12 col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Cultivo
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CultivoProductividad.Cultivo.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Departamento.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Departamento.Nombre)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
             <!-- Botón eliminar -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Eliminar" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
