    <li class="active">Datos Mensuales</li>
</ol>


<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!-- Título -->
    <h2>Registrar datos de la zona</h2>
    <hr />
    @*<div style="padding:10px;">*@

        @using (Html.BeginForm())
        {
            
            <!-- Mensaje de error -->
            <div class="bg-danger">@ViewBag.MensajeError</div>
            
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.ZonaId, "Zona", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("ZonaId", String.Empty)
                    @Html.ValidationMessageFor(model => model.ZonaId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Fecha, new { @id = "date-picker", @class = "date-picker form-control" })
                    @Html.ValidationMessageFor(model => model.Fecha)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ss0, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Ss0, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                    @Html.ValidationMessageFor(model => model.Ss0)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Su0, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Su0, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                    @Html.ValidationMessageFor(model => model.Su0)
                </div>
            </div>

            <!-- Botón eliminar -->
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
        }
    @*</div>*@
</div>

