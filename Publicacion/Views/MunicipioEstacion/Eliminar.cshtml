@model SistemaExperto.Models.MunicipioEstacion

@{
    ViewBag.Title = "Eliminar municipio estacion";
}
<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapa</a></li>
    <li><a href="~/MunicipioEstacion">Estaciones municipio</a></li>
    <li class="active">Eliminar estacion municipio</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Eliminar estacion municipio</h2>
    <hr />

    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Estacion.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Estacion.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Municipio.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Municipio.Nombre)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

                <!-- Botón eliminar -->
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <br />
                    <input type="submit" value="Eliminar" class="btn btn-primary" />

                </div>
            </div>
        }
    </div>
</div>