@model SistemaExperto.Models.Parametros

@{
    ViewBag.Title = "Eliminar";
}
<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Parametros">General</a></li>
    <li><a href="~/Parametros/Index">Otros parámetros</a></li>
    <li class="active">Eliminar otros parámetros</li>
</ol>

!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Eliminar parámetro</h2>
    <hr />

    <!-- Datos -->
    <div class="row">
        <div class="col-xs-12 col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Codigo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NombreBD)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NombreBD)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Valor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


           <!-- Botón eliminar -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Eliminar" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>

</div>
