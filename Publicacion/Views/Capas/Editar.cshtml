@model SistemaExperto.Models.Capas

@{
    ViewBag.Title = "Editar";
}

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/Capas/Index">Capas</a></li>
    <li class="active">Editar capa</li>
</ol>
<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Scripts -->
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/saat.js"></script>
<script src="~/Scripts/jasny-bootstrap.js"></script>
<script>
    $("select").addClass("form-control")
</script>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--título-->
    <h2>Editar capa</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.CapaId)
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NombreCaracterizacion, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.NombreCaracterizacion)
                            @Html.ValidationMessageFor(model => model.NombreCaracterizacion)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdentificadorCaracterizacion, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.IdentificadorCaracterizacion)
                            @Html.ValidationMessageFor(model => model.IdentificadorCaracterizacion)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Concepto, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Concepto)
                            @Html.ValidationMessageFor(model => model.Concepto)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RutaImagen, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.RutaImagen)
                            @Html.ValidationMessageFor(model => model.RutaImagen)
                        </div>
                    </div>

                    <!-- Botón editar -->
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <br />
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </div>

                </div>

                <div class="col-md-4">

                </div>

            </div>
        </div>
    }

</div>
<script>
    $("select").addClass("form-control")
</script>
