@model SistemaExperto.Models.CultivoCiclo

@{
    ViewBag.Title = "Crear ciclo cultivo";
}

<!-- Scripts -->
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/se.js"></script>

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/CultivoCiclo">Ciclo Cultivo</a></li>
    <li class="active">Crear ciclo cultivo</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Crear ciclo cultivo</h2>
    <hr />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            <div class="row">

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nombre)
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CultivoId, "Cultivo", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CultivoId", String.Empty)
                        @Html.ValidationMessageFor(model => model.CultivoId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MunicipioId, "Municipio", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("MunicipioId", String.Empty)
                        @Html.ValidationMessageFor(model => model.MunicipioId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CondicionId, "Condicion", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CondicionId", String.Empty)
                        @Html.ValidationMessageFor(model => model.CondicionId)
                    </div>
                </div>


                <!-- Botón crear -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>


    }

    </div>

 <script>
    $("select").addClass("form-control")
</script>