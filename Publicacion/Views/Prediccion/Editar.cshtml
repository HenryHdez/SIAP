@model SistemaExperto.Models.Prediccion

@{
    ViewBag.Title = "Edit";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Scripts -->
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/se.js"></script>

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapa</a></li>
    <li><a href="~/Prediccion">Predicciones</a></li>
    <li class="active">Editar predicción</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">
    <!-- título -->
    <h2>Editar predicción</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.PrediccionId)

            <div class="form-group">
                @Html.LabelFor(model => model.ZonaEstacionId, "ZonaEstacionId", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ZonaEstacionId", String.Empty)
                    @Html.ValidationMessageFor(model => model.ZonaEstacionId)
                </div>
            </div>

            @*<div class="form-group">
                @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Fecha)
                    @Html.ValidationMessageFor(model => model.Fecha)
                </div>
            </div>*@

            <div class="form-group">
                @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Fecha, new { @id = "date-picker", @class = "date-picker form-control" })
                    @Html.ValidationMessageFor(model => model.Fecha)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <!--Volver-->
    @*<a class="btn btn-warning" href="~/Prediccion" role="button"><span class="glyphicon glyphicon-circle-arrow-left"></span> Volver</a>*@
</div>

<script>
        $("select").addClass("form-control")
</script>