@model SistemaExperto.Models.CapasMunicipios

@{
    ViewBag.Title = "Editar capa municipio";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/CapasMunicipios">Capas municipios</a></li>
    <li class="active">Editar capa municipio</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">


    <!--Título-->
    <h2>Editar capa municipio</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            <div class="row">
                @Html.HiddenFor(model => model.CapaMunicipioId)

                <div class="form-group">
                    @Html.LabelFor(model => model.CapaId, "Capa", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("CapaId", String.Empty)
                        @Html.ValidationMessageFor(model => model.CapaId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MunicipioId, "Municipio", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("MunicipioId", String.Empty)
                        @Html.ValidationMessageFor(model => model.MunicipioId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Visible, new { @class = "control-label col-md-4" })
                    <div class="col-md-1">
                        @Html.CheckBoxFor(model => model.Visible, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Visible)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ExplicacionMapa, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.ExplicacionMapa, new { Rows = "6", @style = "width:100%", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ExplicacionMapa)
                    </div>
                </div>

                <!-- Botón editar -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<script>
    $("select").addClass("form-control")
</script>