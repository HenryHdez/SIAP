@model SistemaExperto.Models.Convenciones

@{
    ViewBag.Title = "Editar convención";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/Convenciones">Convenciones</a></li>
    <li class="active">Editar convención</li>
</ol>
<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Editar convención</h2>
    <hr />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ConvencionId)
            @Html.HiddenFor(model => model.ValorLayer)
            <div class="row">

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreIndicador, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.NombreIndicador)
                        @Html.ValidationMessageFor(model => model.NombreIndicador)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Color, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Color)
                        @Html.ValidationMessageFor(model => model.Color)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OpcionVisualizacionId, "OpcionVisualizacion", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("OpcionVisualizacionId", String.Empty)
                        @Html.ValidationMessageFor(model => model.OpcionVisualizacionId)
                    </div>
                </div>

                <!-- Botón editar -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<script>
    $("select").addClass("form-control")
</script>