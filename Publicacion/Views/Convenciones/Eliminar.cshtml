@model SistemaExperto.Models.Convenciones

@{
    ViewBag.Title = "Delete";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/Convenciones">Convenciones</a></li>
    <li class="active">Eliminar convención</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Eliminar convención</h2>
    <hr />

    <!-- Datos -->
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.OpcionVisualizacion.NombreOpcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OpcionVisualizacion.NombreOpcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NombreIndicador)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreIndicador)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Color)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Color)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Botón eliminar -->
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <br />
                    <input type="submit" value="Eliminar" class="btn btn-primary" />

                </div>
            </div>
        }
    </div>
</div>