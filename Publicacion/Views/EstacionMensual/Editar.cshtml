@model SistemaExperto.Models.EstacionMensual

@{
    ViewBag.Title = "Editar datos de la estación";
}

<!-- Estilos -->
<link href="~/Content/css/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Parametros">General</a></li>
    <li><a href="~/Estacion">Estaciones</a></li>
    <li><a href="~/EstacionMensual/Index/@Model.EstacionId">Datos mensuales</a></li>
    <li class="active">Editar</li>
</ol>

<!-- Scripts -->
<script src="~/Scripts/jquery-2.1.1.js"></script>
<script src="~/Scripts/jquery-ui-1.11.1.js"></script>
<script src="~/Scripts/jquery.ui.datepicker-es.js"></script>

<script>
    $(document).ready(function () {
        $('.date-picker').datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        });
        $('#EstacionId').selectpicker();
    });
</script>
<script>
    function reemplazarPunto(txt) {
        txt.value = txt.value.replace('.', ',');
    }
</script>

<!-- Contenido -->
<div class="row col-md-9 col-md-offset-1 contenido">

    <!-- mensaje de error -->
    <div class="bg-danger">@ViewBag.MensajeError</div>

    <!--título-->
    <h2>Editar estación mensual</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.EstacionMensualId)
        @Html.HiddenFor(model => model.ETo)
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.EstacionId, "Estacion", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownList("EstacionId", String.Empty)
                        @Html.ValidationMessageFor(model => model.EstacionId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Fecha, new { @id = "date-picker", @class = "date-picker form-control" })
                        @Html.ValidationMessageFor(model => model.Fecha)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Tmin, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Tmin, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.Tmin)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Tmax, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Tmax, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.Tmax)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Viento, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Viento, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.Viento)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Precipitacion, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Precipitacion, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.Precipitacion)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ValorMinimo, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ValorMinimo, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.ValorMinimo)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ValorMaximo, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ValorMaximo, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.ValorMaximo)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <!--Datos Reales-->
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.pptDebajo, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.pptDebajo, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.pptDebajo)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.pptDentro, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.pptDentro, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.pptDentro)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.pptSobre, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.pptSobre, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.pptSobre)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TminReal, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.TminReal, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.TminReal)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TmaxReal, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.TmaxReal, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.TmaxReal)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.VientoReal, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.VientoReal, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.VientoReal)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PrecipitacionReal, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.PrecipitacionReal, new { @class = "form-control", onblur = "reemplazarPunto(this)" })
                        @Html.ValidationMessageFor(model => model.PrecipitacionReal)
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

</div>