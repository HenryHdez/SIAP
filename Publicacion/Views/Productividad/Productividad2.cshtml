
@{
    ViewBag.Title = "Productividad2";
}

<style>
    /* cellpadding */
    th, td {
        padding: 5px;
    }

    /* cellspacing */
    table {
        border-collapse: separate;
        border-spacing: 20px;
    }
    /* cellspacing="5" */

    /* valign */
    th, td {
        vertical-align: top;
    }

    /* align (center) */
    table {
        margin: 0 auto;
    }

    .panel-heading {
        cursor: pointer;
    }

    .form_productividad {
        border-radius: 10px;
        border-color: #00A99D;
        color: #00A99D;
    }

    .estilo_tabs:active, .estilo_tabs {
        color: #00A99D !important;
    }

    .panel-principal-productividad {
        height: 940px;
        margin-bottom: 10px;
    }

    .panel-alto-100 {
        height: 100%;
        padding-bottom: 10px;
    }
</style>

<ol class="breadcrumb">
    <li><a href="~/Inicio/">Inicio</a></li>
    <li><a href="~/Inicio/Submenu">Menú</a></li>
    <li class="active">Productividad</li>
</ol>

<!--Título-->
<div class="col-md-12 text-center" style="height:100px; padding-top:15px; padding-bottom:20px;">
    <span class="color-texto-productividad" style="font-size:2em;">
        Módulo de  <strong>estimación de agua - rendimiento</strong>
        <img style="height:70px;" src="~/Content/imagenes/iconos/productividad.png" />
    </span>
</div>

<!--Contenido-->
<div class="col-md-12 panel-principal-productividad">
    <div class="col-md-12 panel-alto-100" style="background-color:#00A99D; border-radius:10px">
  

        <input id="ZonaId" name="ZonaId" value="ViewBag.ZonaId" hidden="hidden" />

        <div class="col-md-4 panel-alto-100">
            <div class="col-md-12 text-center" style="background-color:white; margin-bottom:10px; border-radius: 10px; margin-top: 10px">
                <h4 style="color:#00A99D; font-weight:bold">Balance hídrico</h4>
            </div>

            <div class="col-md-12" style="background-color: rgba(255,255,255,0.5); border-radius: 10px; padding-top: 5px">
                <div class="row col-md-12 form-group" style="padding-top: 20px">
                    <button type="button" class="col-md-2 btn btn-default" data-toggle="modal" data-target="#modal-cultivo">?</button>
                    <div class="col-md-10 btn-group center-block">
                     
                    </div>
                </div>

                <div class="row col-md-12 form-group">
                    <button type="button" class="col-md-2 btn btn-default" data-toggle="modal" data-target="#modal-depto">?</button>
                    <div class="col-md-10 btn-group center-block">
                       
                    </div>
                </div>

                <!--Selección de carga de datos del sistema o del usuario-->
                <div class="row col-md-12 form-group">
                    <button type="button" class="col-md-2 btn btn-default" data-toggle="modal" data-target="#modal-origen">?</button>
                    <div class="col-md-10 btn-group center-block">
                        <div class="col-md-10 btn-group center-block">
                            <select id="seleccionOrigenDatos" name="seleccionOrigenDatos" class="form-control form_productividad">
                                <option value="0" selected>Seleccione origen datos clima</option>
                                <option value="1">Sistema</option>
                                <option value="2">Usuario</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div id="CuadroDatosSistema">

                    <!--Selección de estación para datos del sistema-->
                    <div class="row col-md-12 form-group">
                        <button type="button" class="col-md-2 btn btn-default" data-toggle="modal" data-target="#modal-estacion">?</button>
                        <div class="col-md-10 btn-group center-block">
                          
                        </div>

                    </div>

                    <!--Selección de año para datos de la estación del sistema-->
                    <div class="row col-md-12 form-group">
                        <button type="button" class="col-md-2 btn btn-default" data-toggle="modal" data-target="#modal-anio">?</button>
                        <div class="col-md-10 btn-group center-block">
                           
                        </div>
                    </div>

                </div>

                <div id="CuadroDatosUsuario" class="oculto">

                    <!-- Botón crear masivo-->
                    <div class="text-center" id="cuadroCargaMasiva">
                        @*<a class="btn btn-default" href="~/Productividad/IndexCargue" role="button"><span class="fa fa-plus-square"></span> Cargar datos de clima</a>*@
                        <a class="btn btn-default" data-toggle="modal" data-target="#modal-cargue" role="button"><span class="fa fa-plus-square"></span> Cargar datos de clima</a>
                        <h2 style="color:#EF572F">ViewBag.MensajeCargue</h2>
                    </div>

                    <!--Selección de año para carga de datos de usuario-->
                    <div class="col-md-12 form-group" id="cuadroSeleccionAnhoUsuario">
                        <button type="button" class="col-md-2 btn btn-default" data-toggle="modal" data-target="#modal-anio">?</button>
                        <div class="col-md-10 btn-group center-block">
                        
                        </div>
                    </div>
                </div>

                <div class="row col-md-12 form-group">
                    <button type="button" class="col-md-2 btn btn-default" data-toggle="modal" data-target="#modal-fecha">?</button>
                    <div class="col-md-10 form-group">
                        <h4><strong>Fecha de siembra:</strong></h4>
                    </div>
                </div>
                <div class="col-md-12" style="padding: 6px 12px;">
                    <div class="col-md-6" id="seleccionFechaSiembra"></div>
                  
                </div>

                <div class="row col-md-12 form-group">
                    <button type="button" class="col-md-2 btn btn-default" data-toggle="modal" data-target="#modal-suelo">?</button>
                    <div class="col-md-10 btn-group center-block">
                  
                    </div>
                </div>

                <div class="row panel-content">
                    <div class="col-md-4 form-group">
                        <h6>CC:</h6>

                    </div>
                    <div class="col-md-4 form-group">
                        <h6>PMP:</h6>
                  
                    </div>
                    <div class="col-md-4 form-group">
                        <h6>Da:</h6>
                      
                    </div>
                </div>

                <div class="form-group espacio-fechasiembra">
                    @*<div class="col-md-2">
                        <input value="Calcular" class="btn boton-verde" id="btn-Calcular" />
                    </div>*@
                </div>
            </div>
        </div>

        <div class="col-md-8 panel-alto-100" id="panel-resultadosProd">

            <div class="col-md-12 text-center panel-alto-100" style="background-color: rgba(255,255,255,0.5); margin-bottom:10px; border-radius: 10px; margin-top: 10px">

                <div class="form-group">
                    <h3>texto</h3>
                </div>


                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a class="estilo_tabs" href="#mapa" aria-controls="mapa" role="tab" data-toggle="tab">MAPA</a></li>
                    <li role="presentation"><a class="estilo_tabs" href="#productividad" aria-controls="productividad" role="tab" data-toggle="tab">Productividad - Pérdida acumulada</a></li>
                    <li role="presentation"><a class="estilo_tabs" href="#agotamiento" aria-controls="agotamiento" role="tab" data-toggle="tab">AFA - Agotamiento - ADT</a></li>
                    <li role="presentation"><a class="estilo_tabs" href="#tabla" aria-controls="tabla" role="tab" data-toggle="tab">Tabla</a></li>
                </ul>

                <div class="tab-content" style="background-color:white;margin-top: 10px; border-radius:10px; height:830px;">
                    <div role="tabpanel" class="tab-pane active" id="mapa" display= "initial">
                        <img class="img-responsive" src="../Content/imagenes/Productividad/d1_c1.png" />
                        <h2>test imagen</h2>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="productividad">
                        <canvas id="myChart1" width="230" height="200"></canvas>
                        <h2>test productividad</h2>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="agotamiento">
                        <canvas id="myChart4" width="230" height="200"></canvas>
                        <h2>test agotamiento</h2>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="tabla" style="overflow:hidden; width:100%">
                        <table class="table table-condensed table-hover" style="font-size:0.8em;" id="tabla_index">
                            <thead>
                                <tr>
                                    <th>Año</th>
                                    <th>Mes</th>
                                    <th>Dia</th>
                                    <th>Etapa</th>
                                    <th>ETO entrada</th>
                                    <th>P entrada</th>
                                    <th>J</th>

                                    <th>Zr</th>
                                    <th>AFA</th>
                                    <th class="none"> RO</th>
                                    <th class="none">P-RO</th>
                                    <th>Kc</th>
                                    <th>ETC</th>
                                    <th>Dr Inicial</th>
                                    <th class="none">Ks</th>
                                    <th class="none">ETC Adj</th>
                                    <th>DP</th>
                                    <th>Dr Final</th>
                                    <th>Pérd. acum.</th>
                                    <th>Product.</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
 </div>

