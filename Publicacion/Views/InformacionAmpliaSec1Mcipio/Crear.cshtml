                        @Html.EditorFor(model => model.TituloSeccion1Mcipio)
                        @Html.ValidationMessageFor(model => model.TituloSeccion1Mcipio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.InformacionMapa, new { @class = "control-label col-md-2" })
