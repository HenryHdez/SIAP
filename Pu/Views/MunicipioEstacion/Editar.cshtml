@model SistemaExperto.Models.MunicipioEstacion

@{
    ViewBag.Title = "Editar estaciones municipio";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapa</a></li>
    <li><a href="~/MunicipioEstacion">Estaciones municipio</a></li>
    <li class="active">Editar estacion municipio</li>
</ol>


<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Editar estación de municipio</h2>
    <hr />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.MunicipioEstacionId)

            <div class="form-group">
                @Html.LabelFor(model => model.EstacionId, "Estacion", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("EstacionId", String.Empty)
                    @Html.ValidationMessageFor(model => model.EstacionId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MunicipioId, "Municipio", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("MunicipioId", String.Empty)
                    @Html.ValidationMessageFor(model => model.MunicipioId)
                </div>
            </div>

            <!-- Botón editar -->
            <div class="form-group">

                <div class="col-md-12 text-center">
                    <br />
                    <input type="submit" value="Guardar" class="btn btn-primary" />

                </div>
            </div>

        </div>
    }

</div>
<script>
    $("select").addClass("form-control")
</script>
