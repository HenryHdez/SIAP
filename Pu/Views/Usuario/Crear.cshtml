@model SistemaExperto.Models.Usuario

@{
    ViewBag.Title = "Crear";
}

<!-- Scripts -->
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/se.js"></script>
<script src="~/Scripts/jasny-bootstrap.js"></script>

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />

<!-- Ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Parametros">General</a></li>
    <li><a href="~/Usuario">Usuarios</a></li>
    <li class="active">Crear</li>
</ol>

<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1 contenido">

    <!--Título-->
    <h2>Crear usuario</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Apellido, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Apellido)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoIdentificacionId, "Tipo identificación", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("TipoIdentificacionId", String.Empty)
                        @Html.ValidationMessageFor(model => model.TipoIdentificacionId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Cedula, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Cedula, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Cedula)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LoginUsuario, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.LoginUsuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LoginUsuario)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Correo, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Correo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Correo)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PaisId, "País", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("PaisId", String.Empty)
                        @Html.ValidationMessageFor(model => model.PaisId)
                    </div>
                </div>
                <div class="form-group" id="SeleccionDepartamento">
                    @Html.LabelFor(model => model.DepartamentoId, "Departamento", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("DepartamentoId", String.Empty)
                        @Html.ValidationMessageFor(model => model.DepartamentoId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Contrasena, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Contrasena, new { @type = "password", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Contrasena)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Direccion, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Direccion)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Celular, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Celular, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Celular)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Telefono, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Telefono)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ActividadId, "Actividad", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("ActividadId", String.Empty)
                        @Html.ValidationMessageFor(model => model.ActividadId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Institucion, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Institucion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Institucion)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoUsuario, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.TipoUsuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TipoUsuario)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Administrador, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.Administrador, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Administrador)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Activo, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.Activo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Activo)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PerfilId, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("PerfilId", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PerfilId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<script>
    $("select").addClass("form-control")
</script>

<script type="text/javascript">
    $(document).ready(function () {
       // $("#Clave").val('');
        //$("#ConfirmarClave").val('');
        @*var codigoPais = @Html.Raw(Model.PaisId);
        if (codigoPais != "1")
        {
            $('#SeleccionDepartamento').addClass("ocultar");
        }*@
    });

    $('#PaisId').change(function () {
        if ($(this).val() != "1") {
            $('#SeleccionDepartamento').addClass("ocultar");
        } else {
            $('#SeleccionDepartamento').removeClass("ocultar");
        }
    });
</script>