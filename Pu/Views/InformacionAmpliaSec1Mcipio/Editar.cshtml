@model SistemaExperto.Models.InformacionAmpliaSec1Mcipio

@{
    ViewBag.Title = "Editar";
}

<!-- Estilos -->
<link href="~/Content/css/se.css" rel="stylesheet" />
<link href="~/Content/css/main.css" rel="stylesheet" />
<link href="~/Content/css/whhg.css" rel="stylesheet" />
<link href="~/Content/css/jquery.cleditor.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.cleditor.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#InformacionMapa").cleditor();
        $("#NombreMapa").cleditor();
    });
</script>

<!-- ruta de navegación -->
<ol class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="~/Administracion/Index">Administración</a></li>
    <li><a href="~/Administracion/Mapa">Mapas</a></li>
    <li><a href="~/InformacionAmpliaSec1Mcipio">Información amplia municipio</a></li>
    <li class="active">Editar</li>
</ol>
<!-- Contenido -->
<div class="row col-md-10 col-md-offset-1">

    <!--Título-->
    <h3>Editar información amplia del municipio</h3>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
        
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.InformacionAmpliaSec1McipioId)
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.CapaMunicipioId, "CapaMunicipioId", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CapaMunicipioId")
                        @*@Html.DropDownList("CapaMunicipioId", String.Empty)*@
                        @Html.ValidationMessageFor(model => model.CapaMunicipioId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TituloSeccion1Mcipio, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TituloSeccion1Mcipio)
                        @Html.ValidationMessageFor(model => model.TituloSeccion1Mcipio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.InformacionMapa, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.InformacionMapa, new {@id="InformacionMapa",Rows = 5 })
                        @Html.ValidationMessageFor(model => model.InformacionMapa)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreMapa, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.NombreMapa, new { @id = "NombreMapa", Rows = 5 })
                        @Html.ValidationMessageFor(model => model.NombreMapa)
                    </div>
                </div>

                <!-- Botón editar -->
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <br />
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
    </div>
    }

    </div>
    <script>
        $("select").addClass("form-control");
        $("input").addClass("form-control");
    </script>